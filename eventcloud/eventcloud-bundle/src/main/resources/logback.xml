<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${eventcloud.bundle.home}/logs/${logging.output.filename}.logback
		</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${eventcloud.bundle.home}/logs/${logging.output.filename}.%d{yyyy-MM-dd_HH}.logback
			</fileNamePattern>
		</rollingPolicy>

		<encoder>
			<pattern>%-30(%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5.5level %22.22logger{0}]) %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.objectweb.proactive.extensions.p2p" level="DEBUG" />
	<logger name="fr.inria.eventcloud" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>