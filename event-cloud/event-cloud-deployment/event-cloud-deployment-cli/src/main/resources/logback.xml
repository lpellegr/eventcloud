<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${eventcloud.bundle.home}/logs/eventcloud.logback.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>eventcloud.logback.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>10</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>100MB</maxFileSize>
		</triggeringPolicy>

		<encoder>
			<pattern>%-30(%d{HH:mm:ss.SSS} [%-5.5level %22.22logger{0}]) %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="org.objectweb.proactive.extensions.p2p" level="DEBUG" />
	<logger name="fr.inria.eventcloud" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>